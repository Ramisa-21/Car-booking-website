{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // START: CRITICAL ADDITIONS FOR PATH ALIASES
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"]
    },
    // END: CRITICAL ADDITIONS

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "prisma/seed.js"
    // The line "app/lib/prisma.ts" has been removed, as the alias fixes it automatically
  ],
  "exclude": [
    "node_modules"
  ]
}
